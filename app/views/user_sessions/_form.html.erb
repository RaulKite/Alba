<%= form_tag user_sessions_path, :method => :post, :class => "form-horizontal" do %>

  <div class="control-group"> 
  <%= label_tag :username , "Username", :class => "control-label"%>
  <%= text_field_tag :username, nil, :class => "input-xlarge" %>
  </div>

  <div class="control-group"> 
  <%= label_tag :password, nil, :class => "control-label"%>
    <%= password_field_tag :password, nil, :class => "input-xlarge" %>
  </div>

  <div class="form-actions" id ="botones">    
    <%= submit_tag  "Login" , :class => "btn btn-primary" %>
  </div>
<% end %>